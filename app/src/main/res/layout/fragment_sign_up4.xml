<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.SignUp3Fragment">


    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/baseline_arrow_back_ios_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="36dp"
        android:layout_marginRight="14dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/tv_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_regular"
            android:text="Регистрация"
            android:textColor="@color/new_black"
            android:textSize="@dimen/auth_title" />

        <TextView
            android:id="@+id/tv_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Введите 4-значный код отправленный на ваш email"
            android:textAlignment="center"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_code"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="101dp"
                android:background="@drawable/input_bg"
                android:fontFamily="@font/roboto_regular"
                android:hint=""
                android:inputType="numberSigned"
                android:padding="19dp"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/et_code2"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="101dp"
                android:background="@drawable/input_bg"
                android:fontFamily="@font/roboto_regular"
                android:inputType="numberSigned"
                android:padding="19dp"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/et_code3"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="101dp"
                android:background="@drawable/input_bg"
                android:fontFamily="@font/roboto_regular"
                android:inputType="numberSigned"
                android:padding="19dp"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/et_code4"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="101dp"
                android:background="@drawable/input_bg"
                android:fontFamily="@font/roboto_regular"
                android:inputType="numberSigned"
                android:padding="19dp"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="38dp">

            <TextView
                android:id="@+id/tv_no_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:paddingEnd="12dp"
                android:text="Не получили код?"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Отправить снова"
                android:textColor="#0A5BBA"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>